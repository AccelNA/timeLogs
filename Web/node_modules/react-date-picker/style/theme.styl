.date-picker
    overflow hidden
    font-size $dp-datepicker-font-size
    background white
    width 300px
    height 300px

    &
    & *
        box-sizing border-box

    .dp-cell
        text-align center
        color $dp-datepicker-day-color
        background $dp-datepicker-day-bg
        border $dp-datepicker-border-width $dp-datepicker-border-style $dp-datepicker-border-color
        cursor pointer

        &.dp-prev
        &.dp-next
            color $dp-datepicker-day-other-month-color
            background $dp-datepicker-day-other-month-bg

        &.dp-in-range
            background $dp-datepicker-day-in-range-bg

        &.dp-disabled
            cursor default
            opacity 0.3
            color $dp-datepicker-day-disabled-color
            background $dp-datepicker-day-disabled-bg

        &:hover
            color $dp-datepicker-cell-over-color
            font-weight $dp-datepicker-cell-over-font-weight
            background $dp-datepicker-cell-over-background

        &.dp-value
            color $dp-datepicker-value-color
            font-weight $dp-datepicker-value-font-weight
            background $dp-datepicker-value-bg

        &.dp-current
            color $dp-datepicker-today-color
            background $dp-datepicker-today-bg

        &.dp-in-range.dp-current
        &.dp-in-range.dp-value
            background $dp-datepicker-day-in-range-bg

        &.dp-month
            @extend .u-ellipsis

    .dp-inner
        border $dp-datepicker-border-width $dp-datepicker-border-style $dp-datepicker-border-color

    .dp-footer
        padding 3px
        justify-content center
        border-top-width 0px

        .dp-footer-selected
        .dp-footer-today
            padding 5px 15px
            border-width 1px
            cursor pointer

    .dp-body
        overflow hidden

    .dp-anim-target
        animation-duration 200ms

    .dp-body
    .dp-nav-table
        .dp-cell:first-child
        .dp-cell:last-child
            border-left-width 0px
            border-right-width 0px

    .dp-nav-table
    .dp-body
        .dp-row:first-child
            height 30px
            font-weight bold

    .dp-nav-view
    .dp-nav-cell
    .dp-week-day-name
        @extend .u-ellipsis
        @extend .u-unselectable

    .dp-week-day-name
        cursor default

    .dp-nav-view
    .dp-nav-cell
        cursor pointer

    .dp-nav-cell
        background $dp-datepicker-nav-bg
        &:hover
            background $dp-datepicker-nav-over-bg

    .dp-nav-view
        background $dp-datepicker-month-name-bg
        &:hover
            background $dp-datepicker-month-name-over-bg

    .dp-nav-table
        .dp-cell
            border-top-width 0px
            border-bottom-width 0px

    .dp-decade-view
    .dp-year-view
    .dp-month-view
        @extend .u-unselectable
