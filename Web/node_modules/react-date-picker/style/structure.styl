.date-picker
    .dp-inner
        size 100%
        -webkit-flex-flow column
        @extend .u-flex-column

    .dp-footer
        -webkit-flex-flow row
        @extend .u-flex-row

    .dp-body
        flex 1
        position relative

        .dp-table
            size 100%

        .dp-month-view
            position absolute
            transform translate3d(0%, 0px, 0px)

            &.dp-prev
                left -100%

            &.dp-next
                left 100%

            .dp-week
                display table-row
                list-style none

    .dp-nav-table
    .dp-body .dp-table
        table-layout fixed

    .dp-nav-table
        width 100%

    .dp-anim-target
        transform translate3d(0px, 0px, 0px)
        position absolute
        size 100%

        &.dp-transition-prev
            animation-name prev-month-nav
        &.dp-transition-next
            animation-name next-month-nav


@keyframes prev-month-nav
    to {
        transform translate3d(100%, 0px, 0px)
    }

@keyframes next-month-nav
    to {
        transform translate3d(-100%, 0px, 0px)
    }
